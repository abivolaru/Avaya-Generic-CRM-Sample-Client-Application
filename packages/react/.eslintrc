{
  "root": true,
  "env": { "browser": true, "es2020": true },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react/jsx-runtime",
    "plugin:react-hooks/recommended",
    "standard",
    "prettier"
  ],
  "ignorePatterns": ["dist", "node_modules"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "settings": { "react": { "version": "detect" } },
  "rules": {
    "react/prop-types": "off"
  },
  "overrides": [
    {
      "files": ["rollup/**/*.js"],
      "env": { "node": true }
    }
  ]
}
